<body id="users">
	<div class="container">
		<div class="column">
			<img src="http://www.mallorcacyclingtours.com/wp-content/uploads/2014/04/blank-profile-hi.png">
			<ul class="list">
				<li class="info">Name: <%= @user.first_name %> <%= @user.last_name %></li>
				<li class="info">Date Joined: <%= @user.created_at %></li>
				<li class="info">Current City: <%= @user.place.name %></li>
		 	</ul>

		 	<% if @current_user == @user %>
			 	<a href = "/users/<%= @user.id %>/edit"><b>EDIT USER!</b></a>
		 	<% end %>

		</div>
		<div>
			<% @tip.each do |f| %>
				<ul>
					<li><a href="/tips/<%= f.id %>">Name: <%= f.name %></a></li>
				</ul>
			<% end %>
		</div>
	</div>
</body>

 